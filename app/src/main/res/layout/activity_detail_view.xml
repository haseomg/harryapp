<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".DetailViewActivity">

    <TextView
        android:id="@+id/textViewDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="179dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="179dp"
        android:fontFamily="@font/bmjua"
        android:gravity="center"
        android:text="상세"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="407dp"
        android:layout_height="674dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="17dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDetail">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewDetailDate"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/bmjua"
                android:text="날짜"
                android:gravity="center"
                android:background="#F8F3C3"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <Space
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textViewDataDate"
                android:layout_width="320dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/bmjua"
                android:text="오늘날짜"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewDetailType"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/bmjua"
                android:text="유형"
                android:gravity="center"
                android:background="#F8F3C3"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <Space
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textViewDataType"
                android:layout_width="320dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/bmjua"
                android:text="데이터유형"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewDetailCategory"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/bmjua"
                android:text="카테고리"
                android:gravity="center"
                android:background="#F8F3C3"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <Space
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textViewDataCategory"
                android:layout_width="320dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/bmjua"
                android:text="데이터카테고리"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewDetailItem"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/bmjua"
                android:text="항목"
                android:gravity="center"
                android:background="#F8F3C3"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <Space
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textViewDataItem"
                android:layout_width="320dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/bmjua"
                android:text="데이터항목"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewDetailPrice"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#F8F3C3"
                android:fontFamily="@font/bmjua"
                android:text="가격"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <Space
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textViewDataPrice"
                android:layout_width="320dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/bmjua"
                android:text="데이터가격"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/textViewDetailImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:fontFamily="@font/bmjua"
            android:text="사진"
            android:background="#F8F3C3"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/imageViewDataImage"
            android:layout_width="match_parent"
            android:layout_height="493dp"
            android:visibility="invisible"
            app:srcCompat="@android:drawable/ic_menu_crop" />


    </LinearLayout>

    <ImageButton
        android:id="@+id/imageButtonBack"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="129dp"
        android:backgroundTint="#00FFFFFF"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewDetail"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />
</androidx.constraintlayout.widget.ConstraintLayout>