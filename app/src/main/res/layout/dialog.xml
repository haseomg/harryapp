<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <View
        android:id="@+id/divider9"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/white" />

    <TextView
        android:id="@+id/textViewDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bmjua"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:background="#E1CB8B"
        android:text="리스트 추가" />


    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/white" />

    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal">


        <View
            android:id="@+id/divider11"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="@color/white" />

        <TextView
            android:id="@+id/textView_type"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="#E8DA60"
            android:fontFamily="@font/bmjua"
            android:text="유형"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="20sp" />
        <Spinner
            android:id="@+id/spinner_type"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:spinnerMode="dropdown"
            android:dropDownWidth="110dp"></Spinner>

        <View
            android:id="@+id/divider2"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white" />

        <TextView
            android:id="@+id/textView_category"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="#E8DA60"
            android:fontFamily="@font/bmjua"
            android:text="카테고리"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spinner_category"
            android:layout_width="125dp"
            android:layout_height="30dp"
            android:spinnerMode="dropdown"
            android:dropDownWidth="110dp"></Spinner>

        <View
            android:id="@+id/divider12"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="@color/white" />

    </LinearLayout>

    <View
        android:id="@+id/divider4"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"/>

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/white" />

    <TextView
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bmjua"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text="항목" />

    <View
        android:id="@+id/divider7"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/white" />

    <EditText
        android:id="@+id/edit_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:fontFamily="@font/bmjua"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:selectAllOnFocus="true"
        android:maxLength="10"
        android:hint="항목을 입력해주세요." />

    <View
        android:id="@+id/divider6"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/white" />

    <TextView
        android:id="@+id/price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bmjua"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text="가격" />

    <View
        android:id="@+id/divider8"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/white" />

    <EditText
        android:id="@+id/edit_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bmjua"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:ems="10"
        android:selectAllOnFocus="true"
        android:hint="가격을 입력해주세요."
        android:maxLength="10"
        android:inputType="number" />

    <View
        android:id="@+id/divider13"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/white" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/price3"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bmjua"
            android:text="사진"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/imageButtonGallery"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="#00000000"
            android:scaleType="fitCenter"
            android:src="@android:drawable/ic_menu_gallery" />

        <ImageButton
            android:id="@+id/imageButtonCamera"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:scaleType="fitCenter"
            android:src="@android:drawable/ic_menu_camera" />

    </LinearLayout>


    <View
        android:id="@+id/divider10"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/white" />

    <ImageView
        android:id="@+id/imageViewImage"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:scaleType="fitCenter"
        android:visibility="gone" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:id="@+id/textViewNoImage"
        android:text="사진을 추가해주세요."
        android:textColor="@color/black"
        android:fontFamily="@font/bmjua"
        android:textSize="15sp"
        android:gravity="center"/>

    <View
        android:id="@+id/divider5"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_save"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:backgroundTint="#E8DA60"
            android:fontFamily="@font/bmjua"
            android:text="저장"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:backgroundTint="#E8DA60"
            android:fontFamily="@font/bmjua"
            android:text="취소"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>